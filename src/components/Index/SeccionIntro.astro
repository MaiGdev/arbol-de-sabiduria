---
interface Props {
  titulo: String;
  parrafoGrande: String;
  parrafoPequeño: String;
  parrafoPequeñoMobile: String;
}

const { titulo, parrafoGrande, parrafoPequeño, parrafoPequeñoMobile } = Astro.props;
---

<section class="px-4 py-[60px] sm:py-[100px] flex justify-center items-center text-center">
  <div class="flex justify-center items-center flex-col gap-7 w-full">
    <div class="flex justify-center items-center flex-col gap-4">
      <h5 class="text-sm md:text-sm lg:text-base text-[#333333]">{titulo}</h5>
      <hr class="border border-[#D99D55] w-24" />
    </div>
    <div class="flex justify-center items-center flex-col gap-4 sm:gap-7 w-full">
      <p
        class="mini:text-base sm:text-lg md:text-2xl lg:text-3xl parrafoGrande text-[#333333] lg:!w-[35ch]"
      >
        {parrafoGrande}
      </p>
      <p
        class="hidden sm:block !w-full px-2 sm:px-0 sm:!w-[60ch] md:!w-[80ch] lg:!w-[90ch] text-xs lg:text-sm text-[#747474]"
      >
        {parrafoPequeño}
      </p>
      <p
        class="sm:hidden !w-full px-3 sm:px-0 sm:!w-[60ch] md:!w-[80ch] lg:!w-[90ch] text-xs lg:text-sm text-[#959595]"
      >
        {parrafoPequeñoMobile}
      </p>
    </div>
  </div>
</section>

<style>
  h5 {
    font-family: "Work Sans Variable", sans-serif;
    font-weight: 400;
  }

  .parrafoGrande {
    font-family: "Playfair Display Variable", sans-serif;
  }
</style>
