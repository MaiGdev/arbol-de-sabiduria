---
import ActivitiesWave from "../components/Index/ActivitiesWave.astro";
import HeroImage from "../components/Index/HeroImage.astro";
import IndexMap from "../components/Index/IndexMap.astro";
import MedicalAttentionWave from "../components/Index/MedicalAttentionWave.astro";
import Quote from "../components/Index/Quote.astro";
import SeccionIntro from "../components/Index/SeccionIntro.astro";
import Services from "../components/Index/Services.astro";
import ValuesSection from "../components/Index/ValuesSection.astro";
import HeaderClaro from "../components/ui/HeaderClaro.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Árbol de Sabiduría">
  <HeaderClaro fontColor=`#eef2f6` iconMenuColor="white" />
  <HeroImage />
    <SeccionIntro
      titulo="UN HOGAR DE ATENCIÓN Y BIENESTAR"
      parrafoGrande="Desde hace más de cuatro años, nos hemos dedicado a promover la salud, la independencia y la calidad de vida de todos nuestros residentes."
      parrafoPequeño="En el Hogar Árbol de Sabiduría, nos dedicamos a brindar un cuidado excelente y personalizado para nuestros residentes y sus seres queridos ofreciendo el mejor cuidado posible. "
      parrafoPequeñoMobile="En el Hogar Árbol de Sabiduría, nos dedicamos a brindar un cuidado excelente y personalizado para nuestros residentes."
    />
  <main>
    <MedicalAttentionWave />
    <Services />
    <Quote />
    <ValuesSection />
    <ActivitiesWave />
    <IndexMap />
  </main>
</Layout>
